<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.document.member.dao.MemberDAO">
	<resultMap type="memberVO" id="memberResult">
		<result property="mem_id" column="mem_id" />
		<result property="password" column="password"/>
	</resultMap>
	
	<!-- 로그인 -->
	<select id="login" resultType="memberVO" parameterType="memberVO">
		select * 
			from member
				where mem_id = #{mem_id}
					and
					  password = #{password}
	</select>
	
	<!-- 회원 추가 -->
	<insert id="insertMember" parameterType="memberVO">
		insert into member(mem_id, password)
			values(#{mem_id}, #{password})
	</insert>
</mapper>